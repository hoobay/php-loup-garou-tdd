{
    "name": "agito/loup-garou-tdd",
    "description": "Jeu du Loup-Garou en TDD avec PHPUnit",
    "type": "project",
    "require": {
        "php": "^8.0"
    },

    "autoload": {
        "psr-4": {
            "Jojo\\LoupGarouTdd\\": "src/"
        }
    },
    "authors": [
        {
            "name": "bu7ch",
            "email": "dutchr@live.fr"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^13.0"
    },"autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "test:coverage": "./vendor/bin/phpunit --coverage-html coverage"
    }
}
